<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G_Proyectos.Views.ValidarCorreoElectronico">
    <ContentPage.Content>
        <StackLayout BackgroundColor="SkyBlue" >
            <Label Text="Generar Contraseña" FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <StackLayout Grid.Row="1" Padding="50,30">
                <Label Text="Si ha olvidado su contraseña, usted puede obtener una nueva."/>
                <Label Text="Por Favor introduzca su correo electronico para proseguir con la generacion de su nueva contraseña."/>
                <Entry Placeholder="Ingresar su correo electronico"/>
                
            </StackLayout>

            <StackLayout Grid.Row="1" Padding="50,30">

                <Button Text="VALIDAR" BackgroundColor ="White"
                        Grid.Row="5"/>
            </StackLayout>
            <StackLayout Grid.Row="1" Padding="50,30">

                <Label Text="Aplicacion diseñada pensando en las personas con diabetes , que nesecitan llevar un registro y control diario." />
            </StackLayout>

            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>