<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G_Proyectos.Views.Principal">
    <ContentPage.Content>
        
        <StackLayout>
            <Label Text="Principal"/>

            <Grid VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button x:Name="btniniciar"
                    Text="INCIAR SESIÓN" Grid.Row="0"
                        HorizontalOptions="Center" Clicked="Btniniciar_Clicked"/>
                <Button x:Name="btnregistrar" 
                        Text="REGISTRATE AQUÍ" Grid.Row="2"
                        HorizontalOptions="Center" Clicked="Btnregistrar_Clicked"/>
                <Label Text="Aplicación diseñada pensando en las personas con diabetes que necesitan llevar un registro y control diario realizado por un glucómetro" Grid.Row="3"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>