<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G_Proyectos.Views.Info"
             Title="INFO"
             Icon="perfil1.png">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20" BackgroundColor="Azure" Spacing="0" HorizontalOptions="Center">
                <Label Text="INFORMACION PERSONAL" HorizontalOptions="Center" FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="Nombre" WidthRequest="100"  />
                    <Entry x:Name="Nombre" WidthRequest="200" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="Apellido" WidthRequest="100"  />
                    <Entry x:Name="apellido" WidthRequest="200" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="Fecha_nac" WidthRequest="100"  />
                    <DatePicker Date="01-01-2000" WidthRequest="200" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="N° celular" WidthRequest="100"  />
                    <Entry x:Name="numerocel" WidthRequest="200" Keyboard="Numeric" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="Tipo Persona" WidthRequest="100"  />
                    <Entry x:Name="Tipo_persona" WidthRequest="200" />
                </StackLayout>
            </StackLayout>

            <StackLayout Padding="20" BackgroundColor="Yellow" Spacing="0" HorizontalOptions="Center">
                <Label Text="MÉDICO TRATANTE" HorizontalOptions="Center" FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="N° Télefono" WidthRequest="100"  />
                    <Entry x:Name="teléfono" WidthRequest="200" Keyboard="Numeric" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="Email" WidthRequest="100"  />
                    <Entry x:Name="Tipso_persona" WidthRequest="200" />
                </StackLayout>
            </StackLayout>
            <Button x:Name="btnactualizar" 
                    Text="ACTUALIZAR" Clicked="btnactualizar_Clicked" 
                    TextColor="#F4F4F4"
                    BackgroundColor="#169FCF"
                    BorderColor="#F4F4F4"
                    BorderWidth="2"
                    CornerRadius="15"
                    WidthRequest="350"
                    HeightRequest="55"
                    Margin="80,0"/>
        </StackLayout>


